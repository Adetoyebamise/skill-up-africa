<div class="form-group">
  <label for="title">Title</label>
  <input
    type="text"
    name="title"
    id="title"
    class="form-control mb-2"
    required
    value="<%=article.title%>"
  />
</div>
<div class="form-group">
  <label for="title">Description</label>
  <textarea name="description" id="description" class="form-control mt-2">
<%= article.descripton %></textarea
  >
</div>
<div class="form-group">
  <label for="markdown">Markdown</label>
  <textarea name="markdown" id="markdown" class="form-control mt-2" rows="10">
<%= article.markdown %></textarea
  >
</div>
<a href="/" class="btn btn-secondary mt-4">Cancel</a>
<button type="submit" class="mt-4 btn btn-primary">Save</button>
